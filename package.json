{
  "name": "@marko/testing-library",
  "description": "Simple and complete Marko testing utilities that encourage good testing practices.",
  "version": "1.0.4",
  "author": "Dylan Piercey <dpiercey@ebay.com>",
  "bugs": "https://github.com/marko-js/testing-library/issues",
  "dependencies": {
    "@testing-library/dom": "^5.4.0",
    "jsdom": "^15.1.1",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@marko/jest": "^1.0.0",
    "@types/jest": "^24.0.15",
    "@types/jsdom": "^12.2.3",
    "@types/node": "^12.0.8",
    "coveralls": "^3.0.4",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "jest-dom": "^3.5.0",
    "lint-staged": "^8.2.1",
    "marko": "^4.18.2",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  },
  "files": [
    "dist",
    "index.js",
    "cleanup-after-each.js"
  ],
  "homepage": "https://github.com/marko-js/testing-library",
  "keywords": [
    "marko",
    "testing-library"
  ],
  "license": "MIT",
  "main": "index.js",
  "peerDependencies": {
    "marko": "^4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js/testing-library"
  },
  "scripts": {
    "build": "tsc && cp ./src/package.json ./dist/package.json",
    "prepublishOnly": "npm run build",
    "ci:report": "cat coverage/lcov.info | coveralls",
    "ci:test": "npm run test -- --coverage",
    "format": "prettier \"**/*.{json,md,js,ts}\" --write",
    "lint": "tsc --noEmit && tslint -t codeFrame -c tslint.json '{src,test}/**/*.ts'",
    "test": "jest"
  },
  "types": "dist/index.d.ts"
}
