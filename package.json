{
  "name": "@marko/testing-library",
  "description": "Simple and complete Marko testing utilities that encourage good testing practices.",
  "version": "3.0.1",
  "author": "Dylan Piercey <dpiercey@ebay.com>",
  "bugs": "https://github.com/marko-js/testing-library/issues",
  "dependencies": {
    "@testing-library/dom": "^6.8.1",
    "jsdom": "^15.2.0",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@marko/jest": "^2.0.1",
    "@testing-library/jest-dom": "^4.1.2",
    "@types/jest": "^24.0.19",
    "@types/jsdom": "^12.2.4",
    "@types/node": "^12.11.7",
    "coveralls": "^3.0.7",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "marko": "^4.18.2",
    "marko-widgets": "^7.0.1",
    "prettier": "^1.18.2",
    "standard-version": "^7.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.4"
  },
  "files": [
    "dist",
    "index.js",
    "cleanup-after-each.js"
  ],
  "homepage": "https://github.com/marko-js/testing-library",
  "keywords": [
    "marko",
    "testing-library"
  ],
  "license": "MIT",
  "main": "index.js",
  "peerDependencies": {
    "marko": "^3 || ^4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js/testing-library"
  },
  "scripts": {
    "build": "tsc && cp ./src/package.json ./dist/package.json",
    "ci:report": "cat coverage/lcov.info | coveralls",
    "ci:test": "npm run test -- --coverage",
    "format": "prettier \"**/*.{json,md,js,ts}\" --write",
    "lint": "tsc --noEmit && tslint -t codeFrame -c tslint.json '{src,test}/**/*.ts'",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "test": "jest"
  },
  "types": "dist/index.d.ts"
}
