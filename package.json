{
  "name": "@marko/testing-library",
  "description": "Simple and complete Marko testing utilities that encourage good testing practices.",
  "version": "3.0.2",
  "author": "Dylan Piercey <dpiercey@ebay.com>",
  "bugs": "https://github.com/marko-js/testing-library/issues",
  "dependencies": {
    "@testing-library/dom": "^7",
    "jsdom": "^15",
    "tslib": "^1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@marko/jest": "^2.2.1",
    "@testing-library/jest-dom": "^5.5.0",
    "@types/jest": "^25.2.1",
    "@types/jsdom": "^16.2.1",
    "@types/node": "^13.11.1",
    "coveralls": "^3.0.11",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "marko": "^4.18.2",
    "marko-widgets": "^7.0.1",
    "prettier": "^2.0.4",
    "standard-version": "^7.1.0",
    "ts-jest": "^25.3.1",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "files": [
    "dist",
    "index.js",
    "cleanup-after-each.js"
  ],
  "homepage": "https://github.com/marko-js/testing-library",
  "keywords": [
    "marko",
    "testing-library"
  ],
  "license": "MIT",
  "main": "index.js",
  "peerDependencies": {
    "marko": "^3 || ^4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js/testing-library"
  },
  "scripts": {
    "build": "tsc && cp ./src/package.json ./dist/package.json",
    "ci:report": "cat coverage/lcov.info | coveralls",
    "ci:test": "npm run test -- --coverage",
    "format": "prettier \"**/*.{json,md,js,ts}\" --write",
    "lint": "tsc --noEmit && tslint -t codeFrame -c tslint.json '{src,test}/**/*.ts'",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "test": "jest"
  },
  "types": "dist/index.d.ts"
}
