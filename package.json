{
  "name": "@marko/testing-library",
  "description": "Simple and complete Marko testing utilities that encourage good testing practices.",
  "version": "4.0.2",
  "author": "Dylan Piercey <dpiercey@ebay.com>",
  "bugs": "https://github.com/marko-js/testing-library/issues",
  "dependencies": {
    "@testing-library/dom": "^7",
    "jsdom": "^16",
    "tslib": "^2"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@marko/jest": "^3.2.0",
    "@testing-library/jest-dom": "^5.11.2",
    "@types/jest": "^26.0.7",
    "@types/jsdom": "^16.2.3",
    "@types/node": "^14.0.27",
    "coveralls": "^3.1.0",
    "husky": "^4.2.5",
    "jest": "^26.2.1",
    "lint-staged": "^10.2.11",
    "marko": "^4.18.2",
    "marko-widgets": "^7.0.1",
    "prettier": "^2.0.5",
    "standard-version": "^8.0.2",
    "ts-jest": "^26.1.4",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.7"
  },
  "files": [
    "dist",
    "index.js",
    "cleanup-after-each.js"
  ],
  "homepage": "https://github.com/marko-js/testing-library",
  "keywords": [
    "marko",
    "testing-library"
  ],
  "license": "MIT",
  "main": "index.js",
  "peerDependencies": {
    "marko": "^3 || ^4 || ^5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js/testing-library"
  },
  "scripts": {
    "build": "tsc && cp ./src/package.json ./dist/package.json",
    "ci:report": "cat coverage/lcov.info | coveralls",
    "ci:test": "npm run test -- --coverage",
    "format": "prettier \"**/*.{json,md,js,ts}\" --write",
    "lint": "tsc --noEmit && tslint -t codeFrame -c tslint.json '{src,test}/**/*.ts'",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "test": "jest"
  },
  "types": "dist/index.d.ts"
}
